<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_client__inscription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" 
    tools:context="com.example.diazr.hunter.Inscription.Client_Inscription"
    android:background="@color/cardview_dark_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
            android:text="Inscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="117dp"
            android:layout_marginStart="117dp"
            android:id="@+id/textView"
            tools:textColor="@color/cardview_light_background"
            android:textSize="30sp"
                    android:textColor="@color/cardview_light_background" />

                <TextView
                    android:text="Nom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:id="@+id/textView2"
                    android:textAlignment="center"
                    tools:textColor="@color/cardview_light_background"
                    android:textSize="18sp"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/textView3"
                    android:layout_alignEnd="@+id/textView3"
                    android:textColor="@color/cardview_light_background" />

                <EditText
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:id="@+id/inscription_client_nom"
                    android:textSize="18sp"
                    android:hint="Nom"
                    android:textColor="#FFF" />

                <TextView
                    android:text="Prenom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:id="@+id/textView3"
                    android:textAlignment="center"
                    tools:textColor="@color/cardview_light_background"
                    android:layout_below="@+id/inscription_client_nom"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/textView4"
                    android:layout_alignEnd="@+id/textView4"
                    android:textSize="18sp"
                    android:textColor="@color/cardview_light_background" />

                <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/inscription_client_nom"
            android:layout_alignStart="@+id/inscription_client_nom"
            android:id="@+id/inscription_client_prenom"
            android:hint="Prenom"
                    android:textColor="#FFF" />

                <TextView
            android:text="adresse Mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/textView4"
            android:textAlignment="center"
            tools:textColor="@color/cardview_light_background"
            android:layout_below="@+id/inscription_client_prenom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textColor="@color/cardview_light_background" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignLeft="@+id/inscription_client_prenom"
            android:layout_alignStart="@+id/inscription_client_prenom"
            android:id="@+id/inscription_client_mail"
            android:hint="eMail"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:id="@+id/textView5"
            android:text="Mot de Passe"
            tools:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:layout_below="@+id/inscription_client_mail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/cardview_light_background" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignLeft="@+id/inscription_client_mail"
            android:layout_alignStart="@+id/inscription_client_mail"
            android:id="@+id/inscription_client_password"
            android:hint="Mot de Passe"
            android:textColor="#FFF" />

        <Button
            android:text="Date de naissance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_DateNaiss"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/inscription_client_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="do_DateNaiss" />

                <Button
                    android:layout_marginTop="16dp"
                    android:text="Photo de profil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    android:onClick="doChoosePhoto" />

                <TextView
                    android:layout_marginTop="16dp"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="51dp"
                    android:id="@+id/textView1"
                    android:layout_above="@+id/seekBar"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/cardview_light_background" />


                <TextView
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Rayon"
            android:layout_alignBaseline="@+id/textView_Rayon"
            android:layout_alignBottom="@+id/textView_Rayon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"/>

                <SeekBar
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar_Rayon"
                    android:max="10"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


                    <Button
                        android:text="Selection de votre CV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_CV"
                        android:layout_marginTop="32dp"
                        android:layout_below="@+id/seekBar_Rayon"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:onClick="do_ChooseCV" />

                    <Button
                        android:text="Vos horaires ?"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_disponibility"
                        android:onClick="disponibility"/>



                <Button
                    android:layout_marginTop="32dp"
                    android:text="Enregistrer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inscription_client_enregistrer"
                    android:onClick="redirectMainMenu"/>


            </LinearLayout>
    </ScrollView>
</RelativeLayout>
