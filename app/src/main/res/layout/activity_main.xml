<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diazr.hunter.Main"
    android:background="@color/cardview_dark_background">

    <Button
        android:text="Je cherche"
        android:layout_width="272dp"
        android:layout_height="83dp"
        android:id="@+id/chercher"
        android:background="@android:color/holo_red_dark"
        tools:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:onClick="redirigeCli"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintHorizontal_bias="0.52"
        android:layout_marginTop="120dp" />

    <Button
        android:text="Je recrute"
        android:id="@+id/recruter"
        android:layout_width="272dp"
        android:layout_height="83dp"
        android:background="@android:color/holo_blue_dark"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:onClick="redirigeRecru"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/chercher"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
